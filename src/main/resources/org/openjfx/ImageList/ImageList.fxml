<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ComboBox?>
<VBox styleClass="center-align" minHeight="300.0" minWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.ImageListController">
    <children>

        <HBox styleClass="center-align">
            <children>
                <ScrollPane pannable="true">

                    <GridPane fx:id="gridPane" styleClass="grid">
                        <children>
                            <ImageView fitHeight="100.0" fitWidth="100.0">
                                <image>
                                    <Image fx:id="imagePlaceholder" url="@../images/placeholder.png"/>
                                </image>
                            </ImageView>

                        </children>
                        <columnConstraints>
                            <ColumnConstraints/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints/>
                        </rowConstraints>


                    </GridPane>
                </ScrollPane>

            </children>
        </HBox>

        <Label styleClass="gap-margin" text=" "></Label>

        <HBox styleClass="center-align"

              fx:id="defaultActionContainer">
            <Button styleClass="padding-10"
                    onAction="#onPickImageAction" text="Pick image(s)"/>

            <HBox
                    fx:id="editItemContainer">
                <Label
                        styleClass="gap-margin" text=" "></Label>

                <Button styleClass="padding-10"
                        fx:id="editButton"
                        onAction="#onEditImageListAction" text="Edit"/>

                <Label
                        styleClass="gap-margin" text=" "></Label>

                <Button styleClass="padding-10"
                        fx:id="convertButton"
                        onAction="#onConvertImageListAction" text="Convert"/>

            </HBox>

        </HBox>

        <HBox styleClass="center-align" fx:id="convertingWrapper">

            <Label
                    styleClass="gap-margin" text=" "></Label>

            <Button styleClass="padding-10"
                    fx:id="cancelConvertButton"
                    onAction="#onCancelConvertImageListAction" text="Cancel Convert"/>
            <Label
                    styleClass="gap-margin" text=" "></Label>

            <Button styleClass="padding-10"
                    fx:id="startConvertButton"
                    onAction="#onStartConvertImageListAction" text="Start Convert"/>

            <Label
                    styleClass="gap-margin" text=" "></Label>

            <ComboBox
                    styleClass="convert-format-combobox"
                    fx:id="convertFormatComboBox">
            </ComboBox>
        </HBox>


        <Label styleClass="gap-margin" text=" "></Label>

        <Label fx:id="maxImageLabel"></Label>


    </children>

    <stylesheets>
        <URL value="@../styles.css"/>
        <URL value="@ImageList.css"/>
    </stylesheets>
</VBox>
