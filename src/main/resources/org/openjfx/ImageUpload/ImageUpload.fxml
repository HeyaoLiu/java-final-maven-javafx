<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<GridPane
        fx:id="gridPane"
        alignment="CENTER"
        minHeight="300.0"
        minWidth="400.0"
        xmlns="http://javafx.com/javafx/11.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.openjfx.ImageUploadController">
    <children>
        <ImageView fitHeight="100.0" fitWidth="100.0">
            <image>
                <Image fx:id="imageUploadPreviewEl" url="@../images/placeholder.png"/>
            </image>
        </ImageView>

        <Button onAction="#onPickImageAction" text="Pick a image"/>
    </children>

    <stylesheets>
        <URL value="@../styles.css"/>
        <URL value="@ImageUpload.css"/>
    </stylesheets>
</GridPane>
